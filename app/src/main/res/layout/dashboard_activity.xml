<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5555ff"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    xmlns:ads="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:layout_gravity="center">
        <ImageButton
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:src="@drawable/light"
            android:background="#5555ff"/>
        <View
            android:layout_width="1dip"
            android:layout_height="40dp"
            android:background="#363636"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"/>
        <ImageButton
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:src="@drawable/bulb"
            android:background="#5555ff"/>
        <View
            android:layout_width="1dip"
            android:layout_height="40dp"
            android:background="#363636"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"/>
        <ImageButton
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:src="@drawable/notification"
            android:background="#5555ff"/>
        <View
            android:layout_width="1dip"
            android:layout_height="40dp"
            android:background="#363636"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"/>
        <ImageButton
            android:layout_width="75dp"
            android:layout_height="wrap_content"
            android:src="@drawable/restore"
            android:background="#5555ff"/>
        <View
            android:layout_width="1dip"
            android:layout_height="40dp"
            android:background="#363636"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"/>
        <ImageButton
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:src="@drawable/drawer"
            android:background="#5555ff"/>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:background="#ffff"
        android:layout_gravity="center">
        <ImageButton
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:src="@drawable/search"
            android:background="#ffff"/>
        <View
            android:layout_width="1dip"
            android:layout_height="40dp"
            android:background="#363636"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp"/>
        <ImageButton
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:src="@drawable/user1"
            android:background="#ffff"/>
        <View
            android:layout_width="1dip"
            android:layout_height="40dp"
            android:background="#363636"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp"
            />
        <ImageButton
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:src="@drawable/touch"
            android:background="#ffff"/>

        <View
            android:layout_width="1dip"
            android:layout_height="40dp"
            android:background="#363636"
            android:layout_marginRight="3dp"
            android:layout_marginLeft="3dp"/>
        <ImageButton
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:src="@drawable/people"
            android:background="#ffff"/>

    </LinearLayout>
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/footer"
        android:layout_below="@+id/header"
        android:fillViewport="true"
        android:background="#2200">
        <LinearLayout
            android:id="@+id/myLayout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#dddddd"
            android:fillViewport="true">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#FFFFFF">
             <TextView
                 android:layout_width="wrap_content"
                 android:layout_height="35dp"
                 android:text="Share Your Achivement.."
                 android:textSize="22dp"
                 android:textColor="#FFFFFF"
                 android:background="#00aa00"
                 android:layout_marginTop="2dp"/>
                <Button
                    android:layout_width="100dp"
                    android:layout_height="35dp"
                    android:text="Concern"
                    android:background="#cccccc"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="2dp"/>
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#363636"
                android:layout_marginTop="2dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:background="#FFFFFF">
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/b"
                    android:layout_marginTop="5dp"/>
                <EditText
                    android:id="@+id/et1"
                    android:layout_width="265dp"
                    android:layout_height="60dp"
                    android:hint="Write a Concer/Achivement"
                    android:layout_marginLeft="5dp"
                    android:background="#FFFFFF"/>
                <ImageButton
                    android:id="@+id/imbtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/send"
                    android:background="#00aa00"
                    android:layout_marginTop="10dp"/>

            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="4dp"
                android:background="#FFFFFF">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp">
                    <ImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/b"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="5dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kreena Kapoor Khan"
                            android:textColor="#009999"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:hint="Aug 31 at 3:00 AM"/>
                    </LinearLayout>


                </LinearLayout>
                <TextView
                    android:id="@+id/achivement"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:text="Hello  this is Praveen kumar from bangalore india if you have any query you can call me any time  hint text hint text hint text hint text hint text."/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#363636"
                    android:layout_marginTop="5dp"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="9 Comments"
                    android:layout_marginTop="5dp"/>
            </LinearLayout>
            <ListView
                android:id="@+id/achivementlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></ListView>
        </LinearLayout>

    </ScrollView>
</RelativeLayout>